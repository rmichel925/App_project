<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Titre "Informations" -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Informations"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <!-- URL des données -->
    <TextView
        android:id="@+id/f_info_url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="URL des données utilisées : https://bookshelf-gme.cleverapps.io"
        android:layout_marginBottom="12dp" />

    <!-- Explications des données -->
    <TextView
        android:id="@+id/f_info_explanations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Explications des données affichées : Ce sont les livres récupérés depuis l'API."
        android:layout_marginBottom="12dp" />

    <!-- Librairies et Licences -->
    <TextView
        android:id="@+id/f_info_libraries"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Librairies et Licences : Retrofit, Gson, AndroidX (Licence Apache 2.0)" />

</LinearLayout>
